{
  "collectionName": "components_shared_course_cards",
  "info": {
    "displayName": "Course Card",
    "description": "Course card for featured courses"
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "default": "Full Stack Web Development"
    },
    "description": {
      "type": "text",
      "default": "Master modern web development with HTML, CSS, JavaScript, React, Node.js and databases. Build real-world projects and deploy to production."
    },
    "price": {
      "type": "decimal",
      "default": 299.99
    },
    "originalPrice": {
      "type": "decimal"
    },
    "duration": {
      "type": "string",
      "default": "12 weeks"
    },
    "level": {
      "type": "enumeration",
      "enum": ["Beginner", "Intermediate", "Advanced"],
      "default": "Beginner"
    },
    "thumbnail": {
      "type": "media",
      "allowedTypes": ["images"]
    },
    "link": {
      "type": "string",
      "default": "/courses/full-stack-web-development"
    },
    "instructor": {
      "type": "string",
      "default": "Expert Instructor"
    },
    "rating": {
      "type": "decimal",
      "default": 4.8
    },
    "studentsCount": {
      "type": "integer",
      "default": 1250
    }
  }
}
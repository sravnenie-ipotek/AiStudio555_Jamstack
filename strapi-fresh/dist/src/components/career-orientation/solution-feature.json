{
    "collectionName": "components_career_orientation_solution_features",
    "info": {
        "displayName": "Solution Feature",
        "description": "Individual solution feature card"
    },
    "options": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "description": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "detailedDescription": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "iconName": {
            "type": "string"
        },
        "iconUrl": {
            "type": "media",
            "multiple": false,
            "allowedTypes": ["images"]
        },
        "featureImage": {
            "type": "media",
            "multiple": false,
            "allowedTypes": ["images"]
        },
        "highlightColor": {
            "type": "string",
            "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        }
    }
}

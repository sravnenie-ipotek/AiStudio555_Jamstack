{
    "collectionName": "components_career_orientation_partner_companies",
    "info": {
        "displayName": "Partner Company",
        "description": "Individual partner company with details and opportunities"
    },
    "options": {},
    "attributes": {
        "companyName": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "companyDescription": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "companyLogo": {
            "type": "media",
            "multiple": false,
            "allowedTypes": ["images"]
        },
        "companyWebsite": {
            "type": "string"
        },
        "partnershipType": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "hiringActive": {
            "type": "boolean",
            "default": false
        },
        "internshipAvailable": {
            "type": "boolean",
            "default": false
        },
        "remotePositions": {
            "type": "boolean",
            "default": false
        },
        "headquarters": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "companySize": {
            "type": "enumeration",
            "enum": ["Startup", "Mid-size", "Enterprise"],
            "default": "Mid-size"
        },
        "industry": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "jobsPostedCount": {
            "type": "integer",
            "default": 0,
            "min": 0
        },
        "successStory": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "testimonial": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "testimonialAuthor": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "testimonialTitle": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "featured": {
            "type": "boolean",
            "default": false
        },
        "displayPriority": {
            "type": "integer",
            "default": 0,
            "min": 0
        },
        "logoBackgroundColor": {
            "type": "string",
            "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        }
    }
}

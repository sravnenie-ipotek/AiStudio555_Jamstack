{
  "collectionName": "components_shared_testimonial_items",
  "info": {
    "displayName": "Testimonial Item",
    "description": "Individual testimonial with author info"
  },
  "options": {},
  "attributes": {
    "content": {
      "type": "text",
      "required": true,
      "default": "This course completely transformed my career. The hands-on approach and expert guidance helped me land my dream job in tech."
    },
    "authorName": {
      "type": "string",
      "required": true,
      "default": "John Doe"
    },
    "authorTitle": {
      "type": "string",
      "default": "Software Developer"
    },
    "authorCompany": {
      "type": "string",
      "default": "Tech Company"
    },
    "authorImage": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": false
    },
    "rating": {
      "type": "decimal",
      "min": 0,
      "max": 5,
      "default": 5
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
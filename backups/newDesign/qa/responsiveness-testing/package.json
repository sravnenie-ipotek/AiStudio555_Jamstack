{
  "name": "ai-studio-responsiveness-testing",
  "version": "1.0.0",
  "description": "Automated responsiveness testing for AI Studio web application",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:visual": "playwright test tests/visual-regression.spec.js",
    "test:responsive": "playwright test tests/responsive-full.spec.js",
    "test:quick": "playwright test tests/responsive-quick.spec.js",
    "test:mobile": "playwright test tests/mobile-specific.spec.js",
    "test:all": "npm run test:responsive && npm run test:visual && npm run generate-report",
    "generate-report": "node utils/report-generator.js",
    "setup": "npm install && npx playwright install chromium",
    "clean": "rm -rf reports/* screenshots/* test-results/*"
  },
  "keywords": ["testing", "responsiveness", "playwright", "automation"],
  "author": "AI Studio QA Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0",
    "sharp": "^0.33.0",
    "chalk": "^4.1.2",
    "fs-extra": "^11.2.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
{
  "name": "aistudio-jamstack",
  "version": "1.0.0",
  "description": "AI Studio E-Learning Platform with Strapi CMS",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "migrate": "node migrate-to-railway.js",
    "postinstall": "node migrate-to-railway.js",
    "dev": "concurrently \"npm run watch-html\" \"npm run strapi:dev\" \"npm run frontend:dev\" \"npm run preview:server\"",
    "strapi:dev": "cd strapi-fresh && npm run develop",
    "frontend:dev": "python3 -m http.server 3005",
    "preview:server": "node scripts/live-preview-server.js",
    "watch-html": "nodemon --watch '*.html' --watch 'css/*.css' --exec 'npm run sync-content'",
    "sync-content": "node scripts/sync-content-structure.js",
    "build": "node scripts/build-jamstack.js",
    "preview": "python3 -m http.server 8000 --directory dist",
    "deploy:github": "npm run build && git add dist/ && git commit -m 'Deploy static sites' && git push",
    "generate-screenshots": "node scripts/generate-screenshots.js",
    "validate-content": "node scripts/validate-content.js",
    "backup-content": "node scripts/backup-content.js",
    "restore-content": "node scripts/restore-content.js",
    "test:sync": "jest tests/content-sync.test.js",
    "setup": "npm install && cd strapi-fresh && npm install",
    "clean": "rm -rf node_modules strapi-fresh/node_modules",
    "rebuild": "npm run clean && npm run setup"
  },
  "keywords": [
    "strapi",
    "cms",
    "jamstack",
    "e-learning",
    "webflow"
  ],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.6",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.5.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "puppeteer": "^21.6.1"
  },
  "directories": {
    "test": "tests"
  }
}

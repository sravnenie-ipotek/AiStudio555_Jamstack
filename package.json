{
  "name": "aistudio-jamstack",
  "version": "1.0.0",
  "description": "AI Studio E-Learning Platform with Strapi CMS",
  "main": "server.js",
  "scripts": {
    "start": "echo 'Starting Custom Live API Server (NOT Strapi)' && node migrate-to-railway.js && node server.js",
    "start:dev": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aistudio_db NODE_ENV=development PORT=4005 node server.js",
    "start:local": "bash scripts/start-local.sh",
    "dev:local": "concurrently \"node server.local.js\" \"python3 -m http.server 3005\"",
    "sync:production": "node scripts/sync-production-data.js",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:reset": "docker compose down -v && docker compose up -d",
    "db:backup": "node scripts/sync-production-data.js",
    "db:psql": "docker exec -it aistudio_postgres_local psql -U aistudio_user -d aistudio_db",
    "stop:local": "pkill -f 'node server.local.js' || true && pkill -f 'python3 -m http.server 3005' || true",
    "migrate": "node migrate-to-railway.js",
    "postinstall": "echo 'Build phase - skipping migration' || true",
    "dev": "concurrently \"npm run watch-html\" \"npm run strapi:dev\" \"npm run frontend:dev\" \"npm run preview:server\"",
    "strapi:dev": "cd strapi-fresh && npm run develop",
    "frontend:dev": "python3 -m http.server 3005",
    "preview:server": "node scripts/live-preview-server.js",
    "watch-html": "nodemon --watch '*.html' --watch 'css/*.css' --exec 'npm run sync-content'",
    "sync-content": "node scripts/sync-content-structure.js",
    "build": "node scripts/build-jamstack.js",
    "preview": "python3 -m http.server 8000 --directory dist",
    "deploy:github": "npm run build && git add dist/ && git commit -m 'Deploy static sites' && git push",
    "generate-screenshots": "node scripts/generate-screenshots.js",
    "validate-content": "node scripts/validate-content.js",
    "backup-content": "node scripts/backup-content.js",
    "restore-content": "node scripts/restore-content.js",
    "test:sync": "jest tests/content-sync.test.js",
    "test:responsive": "node responsive-qa-subagent.js http://localhost:9090",
    "test:responsive:prod": "node responsive-qa-subagent.js https://www.aistudio555.com",
    "test:responsive:quick": "node responsive-qa-quick.js",
    "test:playwright": "npx playwright test tests/responsive.spec.js --reporter=list",
    "test:responsive:full": "node run-responsive-tests.js",
    "test:responsive:analyze": "node analyze-responsive-results.js",
    "test:responsive:report": "python3 -m http.server 8080 --directory test-results",
    "test:qa": "node run-qa-tests.js",
    "test:qa:smoke": "node run-qa-tests.js smoke",
    "test:qa:comprehensive": "node run-qa-tests.js comprehensive",
    "test:qa:console": "node run-qa-tests.js console",
    "test:qa:typography": "node run-qa-tests.js typography",
    "test:qa:languages": "node run-qa-tests.js languages",
    "test:qa:accessibility": "node run-qa-tests.js accessibility",
    "test:qa:performance": "node run-qa-tests.js performance",
    "test:qa:all": "node run-qa-tests.js all",
    "test:qa:debug": "node run-qa-tests.js smoke --debug",
    "test:qa:parallel": "node run-qa-tests.js all --parallel",
    "test:playwright:full": "npx playwright test --reporter=html",
    "compare:local-prod": "node automation/compare-local-prod.js",
    "compare": "npm run compare:local-prod",
    "test:newdesign": "npx playwright test backups/newDesign/tests/responsive-newdesign.spec.js --reporter=list",
    "test:newdesign:full": "npx playwright test backups/newDesign/tests/responsive-newdesign.spec.js --reporter=html",
    "test:newdesign:quick": "npx playwright test backups/newDesign/tests/responsive-newdesign.spec.js --grep 'iPhone678|Desktop-1920x1080|iPad-768x1024' --reporter=list",
    "test:install": "npx playwright install",
    "setup": "npm install && cd strapi-fresh && npm install",
    "clean": "rm -rf node_modules strapi-fresh/node_modules",
    "rebuild": "npm run clean && npm run setup",
    "serve:newdesign": "python3 -m http.server 3005",
    "dev:newdesign": "concurrently \"npm start\" \"npm run serve:newdesign\"",
    "restore:oldsite": "node restore-from-backup.js old-site-backup-2025-09-17T11-54-10"
  },
  "keywords": [
    "strapi",
    "cms",
    "jamstack",
    "e-learning",
    "webflow"
  ],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "optionalDependencies": {
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.18.0",
    "@playwright/test": "^1.55.1",
    "autoprefixer": "^10.4.21",
    "axe-playwright": "^2.2.2",
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "cheerio": "^1.1.2",
    "concurrently": "^8.2.2",
    "dompurify": "^3.0.9",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "node-fetch": "^2.7.0",
    "nodemon": "^3.0.2",
    "playwright": "^1.55.1",
    "puppeteer": "^21.11.0",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.5.4",
    "tailwindcss": "^4.1.13"
  },
  "directories": {
    "test": "tests"
  }
}

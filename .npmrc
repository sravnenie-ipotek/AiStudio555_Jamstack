# Speed up npm install on Railway
engine-strict=false
audit=false
fund=false
update-notifier=false
progress=false
loglevel=error

# Cache aggressive strategies
prefer-offline=true
cache-min=999999

# Skip optional dependencies (sqlite3 is optional on Railway since we use PostgreSQL)
optional=false

# Faster package resolution
fetch-retries=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

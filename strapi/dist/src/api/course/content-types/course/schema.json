{
    "kind": "collectionType",
    "collectionName": "courses",
    "info": {
        "singularName": "course",
        "pluralName": "courses",
        "displayName": "Course",
        "description": "Course content type"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "slug": {
            "type": "uid",
            "targetField": "title"
        },
        "description": {
            "type": "richtext",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "shortDescription": {
            "type": "text",
            "maxLength": 200,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "thumbnail": {
            "type": "media",
            "allowedTypes": ["images"],
            "multiple": false
        },
        "price": {
            "type": "decimal",
            "min": 0
        },
        "currency": {
            "type": "string",
            "default": "USD"
        },
        "duration": {
            "type": "integer",
            "min": 1
        },
        "durationUnit": {
            "type": "enumeration",
            "enum": ["days", "weeks", "months"],
            "default": "weeks"
        },
        "lessons": {
            "type": "integer",
            "min": 0
        },
        "rating": {
            "type": "decimal",
            "min": 0,
            "max": 5,
            "default": 0
        },
        "enrollments": {
            "type": "integer",
            "default": 0
        },
        "category": {
            "type": "enumeration",
            "enum": [
                "Web Development",
                "App Development",
                "Machine Learning",
                "Cloud Computing",
                "Data Science",
                "DevOps",
                "AI/ML",
                "Mobile Dev",
                "Cloud"
            ]
        },
        "level": {
            "type": "enumeration",
            "enum": ["Beginner", "Intermediate", "Advanced"],
            "default": "Beginner"
        },
        "featured": {
            "type": "boolean",
            "default": false
        },
        "instructor": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "plugin::users-permissions.user"
        },
        "prerequisites": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "learningOutcomes": {
            "type": "component",
            "repeatable": true,
            "component": "shared.learning-outcome",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "curriculum": {
            "type": "component",
            "repeatable": true,
            "component": "shared.course-module",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        }
    }
}
